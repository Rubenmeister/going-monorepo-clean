{
  "name": "host-service",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "host-service/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "executor": "@nx/webpack:webpack",
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "inspect": false,
          "optimization": true,
          "mode": "production",
          "extractLicenses": true
        }
      },
      "options": {
        "assets": ["host-service/src/assets"],
        "isolatedConfig": true,
        "tsConfig": "host-service/tsconfig.app.json",
        "outputPath": "dist/host-service",
        "generatePackageJson": true,
        "target": "node",
        "webpackConfig": "host-service/webpack.config.js",
        "main": "host-service/src/main.ts",
        "compiler": "tsc"
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/host-service/package.json",
        "{workspaceRoot}/dist/host-service/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/host-service/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "serve": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "host-service:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "host-service:build:development"
        },
        "production": {
          "buildTarget": "host-service:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    }
  }
}
