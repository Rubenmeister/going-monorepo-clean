{
  "name": "enterprise-portal",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "enterprise-portal/src",
  "projectType": "application",
  "tags": ["scope:frontend", "type:application"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/enterprise-portal"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "enterprise-portal:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "enterprise-portal:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "enterprise-portal:build:production",
          "hmr": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
