# ============================================
# GOING - Staging Environment
# ============================================
# Staging config. Secrets marked CHANGE_ME should be set via CI/CD.

NODE_ENV="staging"

# ============================================
# Database
# ============================================
DATABASE_URL="postgresql://going_user:CHANGE_ME@staging-db.going.com:5432/going_staging?schema=public"

# MongoDB
HOST_SERVICE_DB_URL="mongodb://staging-mongo.going.com:27017/accommodation"
EXPERIENCE_DB_URL="mongodb://staging-mongo.going.com:27017/experiences"
PARCEL_DB_URL="mongodb://staging-mongo.going.com:27017/parcel"

# ============================================
# Authentication
# ============================================
JWT_SECRET="CHANGE_ME_USE_CI_SECRET"
JWT_EXPIRES_IN="1h"

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS="https://staging.going.com,https://admin-staging.going.com,https://app-staging.going.com"

# ============================================
# Observability
# ============================================
OTEL_ENABLED="true"
OTEL_EXPORTER_OTLP_ENDPOINT="http://jaeger-staging.going.com:4318"
LOG_LEVEL="info"

# ============================================
# Service Ports (internal, behind load balancer)
# ============================================
API_GATEWAY_PORT=3000
USER_AUTH_SERVICE_PORT=3001
PARCEL_SERVICE_PORT=3002
HOST_SERVICE_PORT=3003
EXPERIENCE_SERVICE_PORT=3004
BOOKING_SERVICE_PORT=3005
TRANSPORT_SERVICE_PORT=3006
PAYMENT_SERVICE_PORT=3007
TOURS_SERVICE_PORT=3008
TRACKING_SERVICE_PORT=3009
NOTIFICATIONS_SERVICE_PORT=3010

# ============================================
# External Services
# ============================================
STRIPE_SECRET_KEY="CHANGE_ME_USE_CI_SECRET"
STRIPE_WEBHOOK_SECRET="CHANGE_ME_USE_CI_SECRET"
