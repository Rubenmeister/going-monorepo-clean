# ============================================
# GOING - Production Environment
# ============================================
# ⚠️ NEVER commit real secrets here!
# All CHANGE_ME values MUST be set via:
#   - CI/CD secrets (GitHub Secrets, GitLab CI)
#   - Secret manager (AWS Secrets Manager, HashiCorp Vault)
#   - Kubernetes secrets

NODE_ENV="production"

# ============================================
# Database
# ============================================
DATABASE_URL="CHANGE_ME_USE_SECRET_MANAGER"

# MongoDB
HOST_SERVICE_DB_URL="CHANGE_ME_USE_SECRET_MANAGER"
EXPERIENCE_DB_URL="CHANGE_ME_USE_SECRET_MANAGER"
PARCEL_DB_URL="CHANGE_ME_USE_SECRET_MANAGER"

# ============================================
# Authentication
# ============================================
JWT_SECRET="CHANGE_ME_USE_SECRET_MANAGER"
JWT_EXPIRES_IN="1h"

# ============================================
# CORS - Production domains
# ============================================
ALLOWED_ORIGINS="https://going.com,https://www.going.com,https://app.going.com,https://admin.going.com"

# ============================================
# Observability
# ============================================
OTEL_ENABLED="true"
OTEL_EXPORTER_OTLP_ENDPOINT="CHANGE_ME_USE_SECRET_MANAGER"
LOG_LEVEL="warn"

# ============================================
# Service Ports
# ============================================
API_GATEWAY_PORT=3000
USER_AUTH_SERVICE_PORT=3001
PARCEL_SERVICE_PORT=3002
HOST_SERVICE_PORT=3003
EXPERIENCE_SERVICE_PORT=3004
BOOKING_SERVICE_PORT=3005
TRANSPORT_SERVICE_PORT=3006
PAYMENT_SERVICE_PORT=3007
TOURS_SERVICE_PORT=3008
TRACKING_SERVICE_PORT=3009
NOTIFICATIONS_SERVICE_PORT=3010

# ============================================
# External Services
# ============================================
STRIPE_SECRET_KEY="CHANGE_ME_USE_SECRET_MANAGER"
STRIPE_WEBHOOK_SECRET="CHANGE_ME_USE_SECRET_MANAGER"
